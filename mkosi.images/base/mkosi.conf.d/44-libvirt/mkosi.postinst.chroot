#!/usr/bin/sh
set -euf
orig_path=/etc/libvirt
subs_path="/var/${orig_path##/}"

rm -rfv "${orig_path}/nwfilter/"*
if [ -d "${orig_path}" ]; then
  mkdir -pv "/usr/share/factory/${subs_path%/*}"
  mv -v "${orig_path}" "/usr/share/factory/${subs_path%/*}"
  ln -svrnf "${subs_path}" "${orig_path}"
fi

