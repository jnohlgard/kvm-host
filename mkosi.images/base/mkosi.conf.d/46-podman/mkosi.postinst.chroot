#!/usr/bin/sh
set -euf

printf 'Masking docker.socket to avoid accidental activation\n'
systemctl mask docker.socket

orig_path=/etc/containers
subs_path="/var/${orig_path##/}"

if [ -d "${orig_path}" ]; then
  mkdir -pv "/usr/share/factory/${subs_path%/*}"
  mv -v "${orig_path}" "/usr/share/factory/${subs_path%/*}"
  ln -svrnf "${subs_path}" "${orig_path}"
fi

