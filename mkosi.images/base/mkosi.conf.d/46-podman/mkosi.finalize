#!/usr/bin/sh
set -euf

orig_path="/etc/containers"
subs_path="/var/${orig_path##/}"

if [ -d "${BUILDROOT}/${orig_path}" ]; then
  mkdir -pv "${BUILDROOT}/usr/share/factory/${subs_path%/*}"
  mv -v "${BUILDROOT}/${orig_path}" "${BUILDROOT}/usr/share/factory/${subs_path%/*}"
  ln -svrnf "${BUILDROOT}/${subs_path}" "${BUILDROOT}/${orig_path}"
fi
